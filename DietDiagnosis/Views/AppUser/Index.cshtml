@model IEnumerable<DietDiagnosis.Models.DietPlan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsideLayout.cshtml";
}


<style>
    body {
        background-color: #dae2e0;
    }
</style>
<div class="container" style="margin-top:20px;">
    <center>
        <div class="well">
            @*<h2>Diet Plans</h2>*@
            <img src="~/Content/images/veg.jpg" style="width : 100%; height:400px;" />
        </div>
    </center>
</div>
<div class="container-fluid">
    @Html.ActionLink("Create New", "Settings", "DietPlan", new { }, new { @class = "btn btn-primary" })
</div>
<p></p>
<div class="container">
    <table class="table table-hover table-striped table-bordered">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCalories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMeals)
            </th>
            <th>
                <center>
                    Panel
                </center>
            </th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCalories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfMeals)
                </td>
                <td>
                    <center>
                        @Html.ActionLink("Edit", "Edit", "DietPlan", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Details", "Details", "DietPlan", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", "DietPlan", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </center>
               </td>
            </tr>
        }

    </table>
</div>